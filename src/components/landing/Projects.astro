---
import projects from "../../data/projects.json";
---

<h2 class="font-bold text-5xl my-10 text-center">Projects</h2>

{
  projects.map((project) => (
    <div class="flex flex-col mb-2 text-center md:text-left mx-6">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4">{project.title}</h2>
        <p class="my-2">{project.description}</p>
        <button class="bg-blue-500 px-3 py-2 hover:bg-blue-400">
          More info
        </button>
      </div>
      <div class="flex-1">
        <img src={project.urlImg} alt={project.title} class="w-72 m-auto" />
      </div>
    </div>
  ))
}
